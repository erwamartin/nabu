<div class="bg-alpha clearfix col-10-12 tpl-edit-profile">

  <h2>Modifier mon profil</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name, :multipart => true), html: { method: :put, class: 'form-edit-profile' }) do |f| %>
    <%= devise_error_messages! %>

    <div class="field">
      <%= f.label :username, :class => "field-label" %>
      <%= f.text_field :username, :class =>"form-field form-field--wlabel" %>
    </div>

    <div class="field">
      <%= f.label :description, :class => "field-label" %>
      <%= f.text_area :description, :class =>"form-field form-field--wlabel" %>
    </div>

    <div class="field">
      <%= f.label :picture, :class => "field-label" %>
      <%= f.file_field :picture, :class =>"form-field" %>
    </div>

    <div class="field">
      <%= f.label :email, :class => "field-label" %>
      <%= f.email_field :email, :class =>"form-field form-field--wlabel" %>
    </div>

    <div class="field">
      <%= f.label :password, :class => "field-label" %> <i class="form-field-helper">(laissez vide si vous ne souhaitez pas modifier votre mot de passe)</i>
      <%= f.password_field :password, :class =>"form-field form-field--wlabel", autocomplete: "off" %>
    </div>

    <div class="field">
      <%= f.label :password_confirmation, :class => "field-label" %>
      <%= f.password_field :password_confirmation, :class =>"form-field form-field--wlabel", autocomplete: "off" %>
    </div>

    <div class="field">
      <%= f.label :current_password, :class => "field-label" %> <i class="form-field-helper">(Obligatoire pour valider les modifications)</i>
      <%= f.password_field :current_password, :class =>"form-field form-field--wlabel", autocomplete: "off" %>
    </div>

    <div class="actions align-center">
      <%= f.submit "Enregistrer", :class => "form-field centered" %>
    </div>
  <% end %>

  <h3>Supprimer mon compte</h3>

  <div>
    <%= button_to "Supprimer mon compte", registration_path(resource_name), :class =>"form-field", data: { confirm: "Êtes vous sûr ?" }, method: :delete %>
  <div>

  <%= link_to "Retour", :back %>

</div>
