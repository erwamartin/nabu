<ul>
<% @users.each do |user| %>
    <li class="follow-container clearfix">
    	<%= link_to image_tag(user.picture.url(:thumb), :class => "avatar-30 profile-follow-pic"), profile_path(user.username) %> <%= link_to user.username, profile_path(user.username), :class => "profile-follow-name" %>
    	<a href="#" class="js-follow sugg-follow" data-id="<%= user.id %>" data-state=<% (@follows_current_user.include?(user)) ? ( %>"0"<% ) :( %>"1"<% ) %>><% (@follows_current_user.include?(user)) ? ( %>-<% ) :( %>+<% ) %></a>
    </li>
<% end %>
</ul>